{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "env": {
    "GOOGLE_CLIENT_EMAIL": "@google-client-email",
    "GOOGLE_PRIVATE_KEY": "@google-private-key",
    "SPREADSHEET_ID": "@spreadsheet-id"
  }
} 